                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
        <Ellipse Height="25" Canvas.Left="60" Stroke="Black" Canvas.Top="130" Width="25" RenderTransformOrigin="0.29,0.31">
