                <RadialGradientBrush RadiusY="0.486" RadiusX="0.486" GradientOrigin="0.320,0.20">
                    <GradientStop Color="Black" Offset="0.935"/>
                    <GradientStop Color="White" Offset="0.100"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="Window.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetProperty="(Canvas.Top)"
                                Duration="0:0:3"
                                RepeatBehavior="Forever">
                                <LinearDoubleKeyFrame KeyTime="0%" Value="130"/>
                                <LinearDoubleKeyFrame KeyTime="20%" Value="112"/>
                                <LinearDoubleKeyFrame KeyTime="40%" Value="90"/>
                                <LinearDoubleKeyFrame KeyTime="60%" Value="100"/>
                                <LinearDoubleKeyFrame KeyTime="80%" Value="125"/>
                                <LinearDoubleKeyFrame KeyTime="99%" Value="130"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetProperty="(Canvas.Left)"
                                Duration="0:0:3"
                                RepeatBehavior="Forever">
                                <LinearDoubleKeyFrame KeyTime="0%" Value="60"/>
                                <LinearDoubleKeyFrame KeyTime="20%" Value="60"/>
                                <LinearDoubleKeyFrame KeyTime="40%" Value="47"/>
                                <LinearDoubleKeyFrame KeyTime="60%" Value="37"/>
                                <LinearDoubleKeyFrame KeyTime="80%" Value="32"/>
                                <LinearDoubleKeyFrame KeyTime="99%" Value="60"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Ellipse.Triggers>
            </Ellipse>
        
        <Ellipse Height="25" Canvas.Left="141" Stroke="Black" Canvas.Top="130" Width="25" RenderTransformOrigin="0.29,0.31">
            <Ellipse.Fill>
                <RadialGradientBrush RadiusY="0.486" RadiusX="0.486" GradientOrigin="0.320,0.20">
                    <GradientStop Color="Black" Offset="0.935"/>
                    <GradientStop Color="White" Offset="0.100"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="Window.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetProperty="(Canvas.Top)"
                                Duration="0:0:3"
                                RepeatBehavior="Forever">
                                <LinearDoubleKeyFrame KeyTime="0%" Value="130"/>
                                <LinearDoubleKeyFrame KeyTime="20%" Value="112"/>
                                <LinearDoubleKeyFrame KeyTime="40%" Value="90"/>
                                <LinearDoubleKeyFrame KeyTime="60%" Value="100"/>
                                <LinearDoubleKeyFrame KeyTime="80%" Value="125"/>
                                <LinearDoubleKeyFrame KeyTime="99%" Value="130"/>
