<Window x:Class="WPFbase2_Lesson16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFbase2_Lesson16"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="250">
    <Canvas>
        <Path Data="M29,160 C29,160 25,87 59,86 93,85 90,161 87,164 80,170 69,164 64,161 51,154 29,160 29,160 z" Fill="White" HorizontalAlignment="Left" Height="81" Margin="0" Canvas.Left="28" Canvas.Top="86" Stretch="Fill" Stroke="Black" VerticalAlignment="Top" Width="61"/>
        <Path Data="M29,160 C29,160 25,87 59,86 93,85 90,161 87,164 80,170 69,164 64,161 51,154 29,160 29,160 z" 
              Fill="White" 
              HorizontalAlignment="Left" 
              Height="81" 
              Stretch="Fill" 
              Stroke="Black" 
              VerticalAlignment="Top" 
              Width="61"
              RenderTransformOrigin="0.5,0.5" Canvas.Left="136" Canvas.Top="86">
