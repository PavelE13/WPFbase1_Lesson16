                    </BeginStoryboard>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames
                                Storyboard.TargetProperty="(Canvas.Left)"
                                Duration="0:0:3"
                                RepeatBehavior="Forever">
                                <LinearDoubleKeyFrame KeyTime="0%" Value="141"/>
                                <LinearDoubleKeyFrame KeyTime="20%" Value="141"/>
                                <LinearDoubleKeyFrame KeyTime="40%" Value="154"/>
                                <LinearDoubleKeyFrame KeyTime="60%" Value="164"/>
                                <LinearDoubleKeyFrame KeyTime="80%" Value="169"/>
                                <LinearDoubleKeyFrame KeyTime="99%" Value="141"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Ellipse.Triggers>
        </Ellipse>



    </Canvas>
</Window>
